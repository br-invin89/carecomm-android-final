<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/ractangle_share_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/screen_title_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Share Picture(s)"
                android:gravity="center"
                android:textColor="@color/black_dull"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/pt_sans_caption_bold"/>

            <ImageView
                android:id="@+id/iv_close_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/union_9"/>

        </FrameLayout>


    </LinearLayout>

        <RelativeLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="1dp"
                android:layout_above="@+id/btn_done"
                />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:text="Share"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:background="@drawable/ractangle_btn_tan"
                android:textColor="@color/black_dull"/>

        </RelativeLayout>


</LinearLayout>