<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
       app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/main_photo_1"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4">
                   <TextView
                       android:id="@+id/tv_event_name"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Daughter"
                       android:maxLines="1"
                       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                       android:layout_weight="0.5"
                       android:ellipsize="end"
                    android:fontFamily="@font/pt_sans_caption_bold"
                    android:textColor="@color/black_dull"
                    android:gravity="bottom"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_relationship"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Incomming Call"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/pt_sans_caption_regular"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="0.6">
                    <TextView
                        android:id="@+id/tv_call_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8:34 AM"
                        android:fontFamily="@font/pt_sans_caption_bold"
                        android:textColor="@color/black_dull"
                        android:gravity="center|right"
                       />
                    <TextView
                        android:id="@+id/tv_call_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feb 16 2019"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/pt_sans_caption_regular"
                        android:gravity="center|right"
                      />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>