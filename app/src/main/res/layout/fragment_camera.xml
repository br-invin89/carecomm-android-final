<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dull">
    <include layout="@layout/header_cross_btn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_camera"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_layout_camera"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/camera_w_icon"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_dull"

                    android:fontFamily="@font/pt_sans_caption_bold"
                    android:text="Camera"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_video"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/circle_layout_video"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/video_w_icon"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_dull"
                    android:fontFamily="@font/pt_sans_caption_bold"
                    android:text="Video"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_album"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/circle_layout_album"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/group_317"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_dull"

                android:fontFamily="@font/pt_sans_caption_bold"
                android:gravity="center"
                android:text="Album"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>