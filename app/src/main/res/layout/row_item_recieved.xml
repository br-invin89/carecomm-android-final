<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:minHeight="40dp">
    <TextView
        android:id="@+id/other_text"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:text="this is other text"
        android:fontFamily="@font/pt_sans_caption_regular"
        android:textColor="@color/black_dull"
        android:background="@drawable/ractangle_chat_recieved"
        android:textAlignment="viewStart"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black_dull"
        android:layout_toRightOf="@+id/other_text"
        android:text="8:00 PM"/>
</RelativeLayout>