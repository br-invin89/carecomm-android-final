<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/calling_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/camera_publisher"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                />
            <FrameLayout
                android:id="@+id/camera_subscriber"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_dull"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_partner_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_partner_relationship"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black_dull"
                    android:fontFamily="@font/pt_sans_caption_bold"/>
                <TextView
                    android:id="@+id/tv_calling"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Calling.."
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:fontFamily="@font/pt_sans_caption_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout_mute"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|end"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_mute"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/group_401"/>
                        <TextView
                            android:id="@+id/tv_mute"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="Mute"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textColor="@color/black_dull"
                            android:fontFamily="@font/pt_sans_caption_bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_speaker"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_speaker"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/group_391"/>
                        <TextView
                            android:id="@+id/tv_speaker"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Speaker"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_dull"
                            android:fontFamily="@font/pt_sans_caption_bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_volume"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/group_392"/>
                        <TextView
                            android:id="@+id/tv_volume"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="Volume"
                            android:gravity="center"
                            android:textColor="@color/black_dull"
                            android:fontFamily="@font/pt_sans_caption_bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_minimize"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="center_vertical|end"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_minimize"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/group_393"/>
                        <TextView
                            android:id="@+id/tv_minimize"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="Minimize"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black_dull"
                            android:fontFamily="@font/pt_sans_caption_bold"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:layout_weight="0.4"
                        android:text="0"
                        android:textSize="25dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/pt_sans_caption_bold"
                        android:textColor="@color/seek_bar_text"
                        />
                    <SeekBar
                        android:id="@+id/sb_volume"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:splitTrack="false"
                        android:minHeight="10dp"
                        android:minWidth="10dp"
                        android:maxHeight="10dp"
                        android:maxWidth="10dp"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:thumb="@drawable/custom_thumb"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:progress="50"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:textSize="25dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pt_sans_caption_bold"
                        android:textColor="@color/seek_bar_text"
                        android:text="100"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_close"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="End"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:background="@drawable/ractangle_btn"
                        android:layout_marginEnd="10dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/pt_sans_caption_bold"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/requesting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#44FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_requesting_responder_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_requesting_responder_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_dull"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Calling.."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_cancel_requesting"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ractangle_btn"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/responding_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#44FFFFFF"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_responding_requester_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_responding_requester_relationship"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="22dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calling.."
                android:maxLines="1"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/pt_sans_caption_regular"/>
            <Button
                android:id="@+id/btn_accept_responding"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Accept"
                android:textSize="25dp"
                android:background="@drawable/ractangle_btn_light_blue"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/btn_refuse_responding"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Refuse"
                android:textSize="25dp"
                android:background="@drawable/ractangle_btn"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cancelling_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#44FFFFFF"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_cancelling_responder_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_cancelling_responder_relationship"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="22dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancelling.."
                android:maxLines="1"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/pt_sans_caption_regular"/>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/refusing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#44FFFFFF"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_refusing_requester_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_refusing_requester_relationship"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="22dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Refusing.."
                android:maxLines="1"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/pt_sans_caption_regular"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>