<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <include layout="@layout/header_cross_btn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:textColor="@color/black_dull"
                android:gravity="center"
                android:textSize="22dp"
                android:text="Select Category of Event"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_back"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Back"
                android:textSize="20dp"
                android:textColor="@color/black_dull"
                android:background="@drawable/ractangle_btn_tan_light"
                android:textAllCaps="false"
                android:fontFamily="@font/pt_sans_caption_bold"
                />
            <Button
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_next"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Next"
                android:textSize="20dp"
                android:textColor="@color/black_dull"
                android:background="@drawable/ractangle_btn_tan"
                android:textAllCaps="false"
                android:fontFamily="@font/pt_sans_caption_bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>