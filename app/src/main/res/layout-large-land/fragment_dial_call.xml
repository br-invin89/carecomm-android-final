<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <include layout="@layout/header_view"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/main_photo_9"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Daughter"
        android:maxLines="1"
        android:textSize="30dp"
        android:textColor="@color/black_dull"
        android:fontFamily="@font/pt_sans_caption_bold"/>
    <TextView
        android:id="@+id/tv_calling"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calling.."
        android:maxLines="1"
        android:textSize="18dp"
        android:fontFamily="@font/pt_sans_caption_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical|end"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/mute_btn"/>
            <TextView
                android:id="@+id/txt_mute"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Mute"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.45"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_speaker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/speaker_btn"/>
            <TextView
                android:id="@+id/tv_speaker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Speaker"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical|start"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_volume"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/volume_selected_btn"/>
            <TextView
                android:id="@+id/txt_volume"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Volume"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_dull"
                android:fontFamily="@font/pt_sans_caption_bold"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_weight="0.3"
            android:text="0"
            android:textSize="25dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/seek_bar_text"
            />
        <SeekBar
            android:id="@+id/sb_volume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:splitTrack="false"
            android:minHeight="15dp"
            android:minWidth="15dp"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_thumb"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:progress="50"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/seek_bar_text"
            android:text="100"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="25dp"
            android:background="@drawable/ractangle_btn"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_minimize"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@drawable/ractangle_btn_tan"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/black_dull"
            android:text="Minimize"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>