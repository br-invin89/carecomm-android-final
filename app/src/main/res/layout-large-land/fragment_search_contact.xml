<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">
   <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
       android:outlineSpotShadowColor="@color/white_dull"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Add a Contact"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/black_dull"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/pt_sans_caption_bold"/>

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@mipmap/exit_icon_lg"/>

                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/very_light_pink"/>

            </LinearLayout>

           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/txt_title"
                   android:layout_width="400dp"
                   android:layout_height="wrap_content"
                   android:text="Add by Username"
                   android:gravity="start"
                   android:textSize="30dp"
                   android:textColor="@color/black_dull"
                   android:fontFamily="@font/pt_sans_caption_bold"/>
               <TextView
                   android:id="@+id/txt_value"
                   android:layout_width="400dp"
                   android:layout_height="wrap_content"
                   android:text="Carecomm Username"
                   android:gravity="start"
                   android:textSize="20dp"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/black_dull"
                   android:fontFamily="@font/pt_sans_caption_bold"/>

               <EditText
                   android:id="@+id/et_input_data"
                   android:layout_width="400dp"
                   android:layout_height="50dp"
                   android:inputType="textPersonName"
                   android:fontFamily="@font/pt_sans_caption_regular"
                   android:background="@drawable/ractangle_edit_text"
                   android:drawablePadding="8dp"
                   android:paddingLeft="10dp"
                   android:layout_margin="20dp"
                   android:gravity="center_vertical"
                   android:maxLines="1">
               </EditText>

            <Button
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_search"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text="Search"
                android:textSize="20dp"
                android:textColor="@color/black_dull"
                android:background="@drawable/ractangle_btn_tan"
                android:textAllCaps="false"
                android:fontFamily="@font/pt_sans_caption_bold"
                />
           </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>