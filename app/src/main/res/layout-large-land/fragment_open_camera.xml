<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/cPublisher">

    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:layout_gravity="right|center"
        android:background="@color/black_opacity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_flip_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@mipmap/camera_flip_btn"/>

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:fontFamily="@font/pt_sans_caption_regular"
            android:layout_margin="20dp"
            />
        <Button

            android:id="@+id/btn_camera"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Camera"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/black_dull"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@drawable/ractangle_btn_camer_open"
            />
        <ImageView
            android:id="@+id/iv_capture_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@mipmap/camera_shutter_btn"/>



        <Button
            android:id="@+id/btn_video"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Video"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="gone"
            android:fontFamily="@font/pt_sans_caption_bold"
            android:textColor="@color/black_dull"
            android:layout_margin="20dp"
            android:background="@drawable/ractangle_btn_camer_open"
            />
        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:fontFamily="@font/pt_sans_caption_regular"
            android:layout_margin="20dp"
            />

        <ImageView
            android:id="@+id/iv_open_gallary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@mipmap/album_icon"/>
    </LinearLayout>

</FrameLayout>