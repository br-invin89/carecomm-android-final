<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frgments.RegistrationFrgment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:id="@+id/layout_reset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_name"
            android:gravity="start"
            android:textSize="20dp"
            android:textColor="@color/black_dull"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pt_sans_caption_bold"/>
        <TextView
            android:id="@+id/txt_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:gravity="start"
            android:layout_marginTop="40dp"
            android:textColor="@color/black_dull"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pt_sans_caption_bold"/>

        <EditText
            android:id="@+id/et_input_data"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:fontFamily="@font/pt_sans_caption_regular"
            android:background="@drawable/ractangle_edit_text"
            android:drawablePadding="8dp"
            android:paddingLeft="10dp"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:maxLines="1">
        </EditText>


    </LinearLayout>

</FrameLayout>