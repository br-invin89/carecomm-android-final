<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp">
        <include layout="@layout/header_cross_btn"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/white"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Event"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_event_title"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_weight="0.3"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Created By"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_event_created"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Daughter at Jun 18 2019 3:00 PM"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_weight="0.3"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Updated By"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_event_updated"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Daughter at Jun 27 2019 11:00 AM"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_weight="0.3"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Category"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_event_category"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Medical"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_weight="0.3"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Date"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_date"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Jun 18 2019-Jun 18 2019"
                       android:layout_weight="0.3"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:minHeight="100dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Memo"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left|top"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_marginTop="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_memo"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Leorem Leorem Leorem Leorem Leorem Leorem
Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem Leorem"
                       android:layout_weight="0.3"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left|top"
                       android:padding="10dp"
                       />
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Repeat"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_repeat"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Never"
                       android:layout_weight="0.3"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/very_light_pink"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:layout_marginBottom="70dp"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Remainder"
                       android:textColor="@color/black_dull"
                       android:fontFamily="@font/pt_sans_caption_bold"
                       android:gravity="center|left"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:layout_marginStart="10dp"
                       android:layout_weight="0.7"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                   <TextView
                       android:id="@+id/txt_remainder"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="None"
                       android:layout_weight="0.3"
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:textColor="@color/add_button_color"
                       android:fontFamily="@font/pt_sans_caption_regular"
                       android:gravity="center|left"
                       />
               </LinearLayout>
           </LinearLayout>




       </LinearLayout>
        </ScrollView>
            <include layout="@layout/scroll_btns"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="5dp"
            android:layout_alignParentBottom="true"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/pt_sans_caption_bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Edit"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/ractangle_btn_tan"
                    android:textColor="@color/black_dull"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>