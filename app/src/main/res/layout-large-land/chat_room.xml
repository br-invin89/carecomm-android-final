<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/chat_room_header"/>
        <RelativeLayout
            android:id="@+id/relative_chat_room"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chat"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="80dp"
                android:layout_height="match_parent"/>

            <LinearLayout

                android:id="@+id/chat_room_layout"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_send_pics"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/share_img_btn"/>
                <ImageView
                    android:id="@+id/iv_send_video"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/share_video_btn"/>
                <EditText
                    android:id="@+id/edtInput"
                    android:layout_width="match_parent"
                    android:background="@drawable/ractangle_edit_text"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/black_dull"
                    android:fontFamily="@font/pt_sans_caption_regular"
                    android:padding="8dp"
                    android:inputType="textCapSentences|textMultiLine"
                    />
                <Button
                    android:id="@+id/btnSendMessage"
                    android:layout_marginStart="5dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/black_dull"
                    android:textSize="18dp"
                    android:fontFamily="@font/pt_sans_caption_bold"
                    android:background="@drawable/ractangle_btn_tan"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>