<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color">
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:outlineSpotShadowColor="@color/white_dull"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <include layout="@layout/header_cross_btn"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="170dp"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/main_photo_9"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="20dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="25dp"
                                android:textColor="@color/black_dull"
                                android:text="Jane Deo"
                                android:fontFamily="@font/pt_sans_caption_regular"/>

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/black_dull"
                                android:text="Carecomm Username"
                                android:fontFamily="@font/pt_sans_caption_bold"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_dull"
                                android:text="jane.deo"
                                android:fontFamily="@font/pt_sans_caption_regular"/>

                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_value"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:text="Relationship"
                        android:gravity="start"
                        android:textSize="20dp"
                        android:textColor="@color/black_dull"
                        android:fontFamily="@font/pt_sans_caption_bold"/>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/ractangle_edit_text_whitedull">
                            <Spinner
                                android:id="@+id/spinner_contact"
                                android:layout_width="400dp"
                                android:layout_height="50dp"
                                android:spinnerMode="dropdown"

                                android:popupBackground="@drawable/ractangle_edit_text_whitedull"
                                />
                        </LinearLayout>


                    <Button
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/btn_add"
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:text="Add"
                        android:textSize="20dp"
                        android:textColor="@color/black_dull"
                        android:background="@drawable/ractangle_btn_tan"
                        android:textAllCaps="false"
                        android:fontFamily="@font/pt_sans_caption_bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
